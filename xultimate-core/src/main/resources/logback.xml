<?xml version="1.0" encoding="UTF-8"?>
<!-- Example LOGBACK Configuration File http://logback.qos.ch/manual/configuration.html -->
<configuration debug="true" scan="true" scanPeriod="30 seconds">
	<contextName>xultimate</contextName>
	
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date [%contextName] %level [%thread] %logger [%file:%line] - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
		<discriminator>
			<key>logback.host</key>
			<defaultValue>0.0.0.0</defaultValue>
		</discriminator>
		
		<sift>
			<appender name="${CONTEXT_NAME}-${logback.host}" class="ch.qos.logback.core.rolling.RollingFileAppender">
				<file>${project.build.directory}/logs/${CONTEXT_NAME}-${logback.host}.log</file>
				<!-- Support multiple-JVM writing to the same log file -->
				<prudent>true</prudent> 
				<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
					<!-- daily rollover -->
					<fileNamePattern>${project.build.directory}/logs/${CONTEXT_NAME}-${logback.host}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
					<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
						<maxFileSize>50MB</maxFileSize>
					</timeBasedFileNamingAndTriggeringPolicy>
					<!-- keep 14 days' worth of history -->
					<maxHistory>14</maxHistory>
				</rollingPolicy>

				<encoder>
					<pattern>%date [%contextName] %level [%thread] %logger [%file:%line] - %msg%n</pattern>
				</encoder>
			</appender>
		</sift>
	</appender>
	
